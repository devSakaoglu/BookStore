@{
    ViewData["Title"] = "Home Page";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model (List<BookStore.Data.Entities.Category> categories ,List<BookStore.Data.Entities.Author> authors ,Book book,Author author,List<Category> bookCategories)
<form class="col-6" >

    <div class="row">



        <div class="col-6">

            <div>
                <button asp-controller="Category" asp-action="Index" style="margin-top:20px;height:50px;width:auto;font-size:large">Category Edit Panel</button>

            </div>
            <div>
                <button asp-controller="Author" asp-action="Index" style="margin-top:20px;height:50px;width:auto;font-size:large">Author Edit Panel</button>

            </div>
            <div>
                <button asp-controller="Book" asp-action="Index" style="margin-top:20px;height:50px;width:auto;font-size:large">Book Edit Panel</button>

            </div>


        </div>
    </div>
